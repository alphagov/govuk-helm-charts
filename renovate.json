{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "platformAutomerge": true,
  "argocd": {
    "fileMatch": [
      "charts\\/.*\\.yaml$"
    ]
  },
  "helm-values":{
    "fileMatch": [
      "charts\\/.*\\.yaml$"
    ],
    "pinDigests": false
  },
  "kubernetes": {
    "fileMatch": [
      "charts\\/.*\\.yaml$"
    ]
  },
  "ignorePaths": [
    "charts/app-config/image-tags/**"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["renovate/renovate"],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [".*\\/helm-versions\\/.*\\.yaml"],
      "datasourceTemplate": "helm",
      "matchStrings": [
        "(?<registryUrl>.+) (?<depName>.+): \"(?<currentValue>[0-9\\.]+)\""
      ],
      "additionalBranchPrefix": "{{packageFile}}-"
    }
  ]
}
