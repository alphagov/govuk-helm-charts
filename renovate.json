{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "argocd": {
    "fileMatch": [
      "charts\\/.*\\.yaml$"
    ]
  },
  "helm-values":{
    "fileMatch": [
      "charts\\/.*\\.yaml$"
    ],
    "pinDigests": false
  },
  "kubernetes": {
    "fileMatch": [
      "charts\\/.*\\.yaml$"
    ]
  },
  "ignorePaths": [
    "charts/app-config/image-tags/**"
  ]
}
